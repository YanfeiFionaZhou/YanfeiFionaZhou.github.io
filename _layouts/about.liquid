---
layout: default
---
<style>
  /* Section titles using theme color - very specific selectors */
  .section-blue,
  .post .section-blue,
  article .section-blue,
  .post h2.section-blue,
  article h2.section-blue,
  .post .clearfix h2.section-blue,
  article .clearfix h2.section-blue,
  div.post h2.section-blue,
  div.post h2.section-blue strong,
  .section-blue strong {
    color: var(--global-theme-color) !important;
  }

  /* Target by content for extra specificity */
  h2:has(strong:contains('News')),
  h2:has(strong:contains('Preprints')),
  h2:has(strong:contains('Publications')),
  h2:has(strong:contains('Recent Blog Posts')) {
    color: var(--global-theme-color) !important;
  }

  h2 strong:contains('News'),
  h2 strong:contains('Preprints'),
  h2 strong:contains('Publications'),
  h2 strong:contains('Recent Blog Posts') {
    color: var(--global-theme-color) !important;
  }

  /* ID-based targeting - highest specificity */
  #news-title,
  #news-title strong,
  #blog-title,
  #blog-title strong,
  #preprints-title,
  #preprints-title strong,
  #publications-title,
  #publications-title strong {
    color: var(--global-theme-color) !important;
  }

  /* Mobile fixes for news section */
  .news {
    color: var(--global-text-color) !important;
  }

  .news table {
    color: var(--global-text-color) !important;
  }

  .news .news-title {
    color: var(--global-theme-color) !important;
  }

  .news th,
  .news td {
    color: var(--global-text-color) !important;
  }

  /* Ensure news content is visible */
  .news p,
  .news span,
  .news div {
    color: var(--global-text-color) !important;
  }

  @media (max-width: 768px) {
    .news table,
    .news .table {
      font-size: 0.9rem !important;
    }

    .news td,
    .news th {
      color: var(--global-text-color) !important;
      opacity: 1 !important;
      visibility: visible !important;
      font-size: inherit !important;
      line-height: 1.4 !important;
      padding: 0.5rem 0.25rem !important;
    }

    .news .table-responsive {
      border: none !important;
      box-shadow: none !important;
    }

    .news tr {
      border: none !important;
    }

    .news th {
      font-weight: bold !important;
      width: auto !important;
      min-width: 80px !important;
    }
  }

  /* Additional mobile text visibility fixes */
  @media (max-width: 576px) {
    .news td,
    .news th,
    .news table,
    .news .table {
      color: var(--global-text-color) !important;
      background-color: transparent !important;
    }

    .news {
      background-color: transparent !important;
    }
  }
</style>
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
      {{ site.last_name }}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <h2 id="news-title" class="section-blue">
        <strong><a href="{{ '/news/' | relative_url }}" style="color: inherit; text-decoration: none;">News</a></strong>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if site.latest_posts.enabled %}
      <h2 id="blog-title" class="section-blue">
        <strong>Recent Blog Posts</strong>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Publications -->
    <div style="margin-top: 4rem;"></div>
    <h2 id="publications-title" class="section-blue">
      <strong>Selected Publications</strong>
    </h2>
    <p style="margin-top: -0.5rem; margin-bottom: 1rem; font-size: 0.95rem;">
      See <a href="{{ '/publications/' | relative_url }}">full list</a> or <a href="https://scholar.google.com/citations?user={{ site.scholar.scholar_userid }}" target="_blank">Google Scholar</a> for all publications.
    </p>
    <div class="publications mb-5">
      {% bibliography -f papers -q @*[selected=true] %}
    </div>

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
